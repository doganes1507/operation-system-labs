<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperationSystemsLabs.LabPages.Lab2.ProcessInfosPage">

    <ListView
        x:Name="MyListView">

        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <StackLayout Margin="24, 16, 24, 24"
                                 Spacing="8">
                        <Label Text="{Binding ProcessNameAndId}" Style="{StaticResource RegularText}" />
                        <Label Text="{Binding Threads}" Style="{StaticResource RegularText}" Margin="24, 0" />
                    </StackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>

    </ListView>

</ContentPage>