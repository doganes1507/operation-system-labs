<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperationSystemsLabs.LabPages.Lab1.Lab1">

    <ScrollView>
        <VerticalStackLayout>
            <Label
                Text="Лабораторная работа №1"
                Style="{StaticResource HeaderText}" />

            <Label
                Text="Функции получения системной информации"
                Style="{StaticResource RegularText}"
                HorizontalOptions="Center" />

            <Button
                Text="Получить имя компьютера"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayComputerNameButton_OnClicked" />

            <Button
                Text="Получить имя пользователя"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayUserNameButton_OnClicked" />

            <Button
                Text="Путь к каталогу Windows"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayWindowsDirectoryButton_OnClicked" />

            <Button
                Text="Версия операционной системы"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayOsVersionButton_OnClicked" />

            <Button
                Text="Ширина экрана в пиксеоях"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayScreenWidthButton_OnClicked" />

            <Button
                Text="Высота экрана в пикселях"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayScreenHeightButton_OnClicked" />

            <Button
                Text="Размер курсора"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayCursorSizeButton_OnClicked" />

            <Button
                Text="Скорость двойного щелчка"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayDoubleClickTimeButton_OnClicked" />

            <Button
                Text="Текущее время"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplaySystemTimeButton_OnClicked" />

            <Button
                Text="Время с запуска системы"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayTimeSinceStartupButton_OnClicked" />

            <Button
                Text="Запустить консоль Python"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="StartPythonButton_OnClicked" />

            <Button
                Text="Объем оперативной памяти"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayTotalRamCapacityButton_OnClicked" />

            <Button
                Text="Количество потоков процессора"
                Style="{StaticResource BlueButtonStyle}"
                Clicked="DisplayProcessorCountButton_OnClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>