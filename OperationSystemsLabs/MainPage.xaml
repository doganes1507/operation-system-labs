<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OperationSystemsLabs.MainPage">

    <ScrollView>
        <VerticalStackLayout>

            <VerticalStackLayout
                Margin="24, 16, 24, 0"
                Spacing="4">
                
                <Label
                    Text="Лабораторные работы по дисциплине"
                    Style="{StaticResource HeaderText}" />

                <Label
                    Text="&quot;Операционные системы&quot;"
                    Style="{StaticResource HeaderText}" />
                
            </VerticalStackLayout>

            <VerticalStackLayout
                Margin="24, 72, 24, 24"
                Spacing="16">

                <Button
                    Text="Лабораторная работа №1"
                    Style="{StaticResource BlueButtonStyle}"
                    Clicked="Lab1Button_OnClicked" />

                <Button
                    Text="Лабораторная работа №2"
                    Style="{StaticResource BlueButtonStyle}"
                    Clicked="Lab2Button_OnClicked" />
                
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>